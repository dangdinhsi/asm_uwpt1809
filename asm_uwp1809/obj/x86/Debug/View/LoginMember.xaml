<Page
    x:Class="asm_uwp1809.View.LoginMember"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:asm_uwp1809.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:ConnectionId='2' x:Name="MyGrid">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0"/>
                <GradientStop Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" Margin="10,0">
            <TextBlock Text="Đăng nhập" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>

            <Border Width="250" Margin="0,40,0,0" CornerRadius="15" BorderThickness="{StaticResource TextControlBorderThemeThickness}" Background="{StaticResource TextBoxBackgroundThemeBrush}" BorderBrush="{StaticResource TextBoxBorderThemeBrush}" >
                <TextBox x:ConnectionId='8' PlaceholderText="Email" x:Name="Email" BorderBrush="Transparent" Background="Transparent"/>
            </Border>
            <TextBlock x:ConnectionId='3' Foreground="Red" x:Name="email" />
            <Border Width="250" Margin="0,10,0,0" CornerRadius="15" BorderThickness="{StaticResource TextControlBorderThemeThickness}" Background="{StaticResource TextBoxBackgroundThemeBrush}" BorderBrush="{StaticResource TextBoxBorderThemeBrush}" >
                <PasswordBox x:ConnectionId='7' PlaceholderText="Password" x:Name="Password" Width="250" BorderBrush="Transparent" Background="Transparent"/>
            </Border>
            <TextBlock x:ConnectionId='4' Foreground="Red" x:Name="password"/>
            <Button x:ConnectionId='5' Margin="0,20,0,0" Background="White" Foreground="Black" Content="Đăng nhập" HorizontalAlignment="Center"                       />
            <StackPanel HorizontalAlignment="Center" Margin="0,30,0,0">
                <TextBlock Foreground="White" Text="Bạn chưa có tài khoản? "></TextBlock>
                <HyperlinkButton x:ConnectionId='6' HorizontalAlignment="Center" Foreground="WhiteSmoke" Content="Đăng ký ngay"                ></HyperlinkButton>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>

